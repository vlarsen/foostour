<h1>Listing players</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Firstname</th>
    <th>Lastname</th>
    <th>Country</th>
    <th>Gender</th>
    <th>Birthdate</th>
  </tr>

<% for player in @players %>
  <tr>
    <td><%=h player.username %></td>
    <td><%=h player.firstname %></td>
    <td><%=h player.lastname %></td>
    <td><%=h player.country %></td>
    <td><%=h player.gender %></td>
    <td><%=h player.birthdate %></td>
    <td><%= link_to 'Show', player %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= link_to 'Destroy', player, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

