<h1>Register result in match</h1>

<%= error_messages_for :match %>

<% form_for(@match) do |f| %>
  <p>
    <b>Team A</b><br />
    <%= link_to @match.player_a.fullname, player_path(@match.team_a_id) %>
  </p>

  <p>
    <b>Team B</b><br />
    <%= link_to @match.player_b.fullname, player_path(@match.team_b_id) %>
  </p>

  <p>
    <b>Tournament</b><br />
    <%= link_to @match.tournament.name, tournament_path(@match.tournament_id) %>
  </p>

  <p>
    <b>Round</b><br />
    <%= h @match.round %>
  </p>

  <p>
    <b>Played at</b><br />
    <%= f.datetime_select :played_at %>
  </p>

  <p>
    <b>Scores</b><br />
    <%= f.text_field :scores %>
    <span class="help">Format: a-b/a-b/a-b, i.e. score for each game, separated by /</span>
  </p>

  <p>
    <b>Winner</b><br />
    <%= f.collection_select :winner_id, @players, :id, :fullname, :include_blank => true %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @match %> |
<%= link_to 'Back', matches_path %>
