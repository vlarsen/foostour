<h1>New match</h1>

<%= error_messages_for :match %>

<% form_for(@match) do |f| %>
  <p>
    <b>Team a</b><br />
    <%= f.collection_select :team_a_id, @players, :id, :fullname %>
  </p>

  <p>
    <b>Team b</b><br />
    <%= f.collection_select :team_b_id, @players, :id, :fullname %>
  </p>

  <p>
    <b>Tournament</b><br />
    <%= f.collection_select :tournament_id, @tournaments, :id, :name %>
  </p>

  <p>
    <b>Round</b><br />
    <%= f.text_field :round %>
  </p>

  <p>
    <b>Played at</b><br />
    <%= f.datetime_select :played_at, :include_blank => true %>
  </p>

  <p>
    <b>Scores</b><br />
    <%= f.text_field :scores %>
  </p>

  <p>
    <b>Winner</b><br />
    <%= f.collection_select :winner_id, @players, :id, :fullname, :include_blank => true %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', matches_path %>
