<h1>Listing matches</h1>

<table>
  <tr>
    <th>Team a</th>
    <th>Team b</th>
    <th>Tournament</th>
    <th>Round</th>
    <th>Played at</th>
    <th>Scores</th>
    <th>Winner</th>
  </tr>

<% for match in @matches %>
  <tr>
    <td><%=h match.team_a %></td>
    <td><%=h match.team_b %></td>
    <td><%=h match.tournament_id %></td>
    <td><%=h match.round %></td>
    <td><%=h match.played_at %></td>
    <td><%=h match.scores %></td>
    <td><%=h match.winner %></td>
    <td><%= link_to 'Show', match %></td>
    <td><%= link_to 'Edit', edit_match_path(match) %></td>
    <td><%= link_to 'Destroy', match, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New match', new_match_path %>
