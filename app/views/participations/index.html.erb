<h1>Listing participations</h1>

<table>
  <tr>
    <th>Player</th>
    <th>Tournament</th>
    <th>Rank</th>
    <th>Points</th>
  </tr>

<% for participation in @participations %>
  <tr>
    <td><%=h participation.player.fullname %></td>
    <td><%=h participation.tournament.name %></td>
    <td><%=h participation.rank %></td>
    <td><%=h participation.points %></td>
    <td><%= link_to 'Show', participation %></td>
    <td><%= link_to 'Edit', edit_participation_path(participation) %></td>
    <td><%= link_to 'Destroy', participation, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New participation', new_participation_path %>
